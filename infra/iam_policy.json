{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SentinelMonitoring",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeInstances",
                "ec2:DescribeInstanceStatus",
                "s3:ListAllMyBuckets",
                "s3:GetBucketPublicAccessBlock",
                "s3:GetBucketPolicyStatus",
                "s3:GetBucketAcl"
            ],
            "Resource": "*"
        },
        {
            "Sid": "SentinelRemediation",
            "Effect": "Allow",
            "Action": [
                "s3:PutPublicAccessBlock"
            ],
            "Resource": "*"
        }
    ]
}